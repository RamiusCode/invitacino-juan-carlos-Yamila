---
// Agradecimiento.astro
---

<section class="relative w-full py-4 md:py-20 px-6">
  
  <div class="max-w-3xl mx-auto">

    <!-- Contenido -->
    <div class="text-center">
      
      <!-- Separador superior -->
      <div class="flex items-center justify-center gap-3 mb-8">
        <div class="h-px w-16 bg-[#8bcdcd]"></div>
        <div class="w-2 h-2 rounded-full bg-[#8bcdcd]"></div>
        <div class="h-px w-16 bg-[#8bcdcd]"></div>
      </div>

      <!-- Mensaje de agradecimiento -->
      <div class="max-w-2xl mx-auto mb-6">
        <p class="font-charm text-2xl md:text-3xl text-gray-700 leading-relaxed mb-6">
          Gracias por acompañarnos en este momento tan importante
        </p>
        <p class="font-charm text-3xl md:text-4xl text-[#8bcdcd] font-bold">
          ¡Te esperamos!
        </p>
      </div>

      <!-- Iniciales -->
      <p class="font-charm text-2xl md:text-3xl text-gray-600 italic mt-8">
        J & C
      </p>

      <!-- Separador inferior -->
      <div class="flex items-center justify-center gap-3 mt-8">
        <div class="h-px w-16 bg-[#8bcdcd]"></div>
        <div class="w-2 h-2 rounded-full bg-[#8bcdcd]"></div>
        <div class="h-px w-16 bg-[#8bcdcd]"></div>
      </div>

    </div>

  </div>
</section>

<style>
  .font-charm {
    font-family: 'Charm', cursive !important;
  }
</style>